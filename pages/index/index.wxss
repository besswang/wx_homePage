.header{
  border-left:5px solid #3385ff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin:30rpx 15rpx 11rpx 0;
  padding-left:15rpx;
}
.text-all{
  color:#3385ff;
  font-size: 10px
}
.content{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}
.content-item{
  width:45%;
  height:200rpx;
  background:green;
  margin:4rpx;
  position: relative;
}
.content-item image{
  width:100%;
  height:100%;
}
.content-item-text{
  position: absolute;
  bottom: 0;
  left:0;
  color:white;
  font-size: 10px;
  background:-webkit-linear-gradient(bottom, rgba(0,0,0,0.6),rgba(0,0,0,0));
  width:96%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding:2%;
}
.list-item-text{
  font-size: 12px;
  padding:40rpx 15rpx;
}
.list-item-images{
  height:300rpx;
  position: relative
}
.list-item-images .icon{
  width:60rpx;
  height:60rpx;
  border-radius: 50%;
  position: absolute;
  right: 30rpx;
  bottom:-30rpx;
}
.list-item-images .nomalImg{
  height:100%;
}